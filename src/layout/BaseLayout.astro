---
import Logo from "../assets/images/Logo_transition.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

import "../style/Global.astro";
const { title, description, canonical } = Astro.props;
---

<html lang="nl">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/favicon.svg"/>
    <link rel="canonical" href={canonical}/>
    <link rel="alternate" href="https://www.bigbaboons.studio/" hreflang="nl" />
    <link rel="alternate" href="https://www.bigbaboons.studio/en" hreflang="en" />
    <meta name="description" content={description} />

    <script src="../script/clarity.js"></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ENCP03GMLQ">  </script>
    <script src="../script/gtag.js"></script>
    <script src="../script/main.js"></script>

    <title>{ title }</title>
  </head>
  <body class="bg-white">
    <main id="swup" class="transition-main">
      <!-- <Nav /> -->
    <!-- Transition -->

      <div class="w-full flex flex-col justify-center items-center min-h-svh construction px-8 py-12">
        <!-- Logo with animation -->
        <div class="mb-8 animate-fade-in">
          <Logo classes="fill-white min-w-[124px] md:min-w-[200px] logo-overlay transition-logo" />
        </div>

        <!-- Main heading -->
        <h1 class="text-2xl md:text-4xl lg:text-5xl font-bold text-gray-900 text-center mb-4 animate-slide-up">
          Website Under Construction
        </h1>

        <p class="text-lg md:text-xl text-gray-700 text-center mb-12 max-w-2xl animate-slide-up-delay">
          We're working hard to bring you something amazing. In the meantime, feel free to reach out!
        </p>

        <!-- Contact Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 w-full max-w-5xl animate-fade-in-delay">

          <!-- Phone Card -->
          <a href="tel:+31681142720" class="group bg-gray-100 rounded-2xl p-6 md:p-8 transition-all duration-300 hover:scale-105 hover:shadow-2xl border border-gray-200">
            <div class="flex flex-col items-center text-center">
              <div class="w-14 h-14 md:w-16 md:h-16 group-hover:scale-125 bg-accent/80 rounded-full flex items-center justify-center mb-4 group-hover:bg-accent transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 md:w-8 md:h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <h3 class="text-gray-900 font-semibold text-lg mb-2">Phone</h3>
              <p class="text-gray-700 text-base md:text-lg font-medium">+31 681 142 720</p>
            </div>
          </a>

          <!-- Email Card -->
          <a href="mailto:bigbaboonsstudio@gmail.com" class="group bg-gray-100 rounded-2xl p-6 md:p-8 transition-all duration-300 hover:scale-105 hover:shadow-2xl border border-gray-200">
            <div class="flex flex-col items-center text-center">
              <div class="w-14 h-14 md:w-16 md:h-16 group-hover:scale-125 bg-accent/80 rounded-full flex items-center justify-center mb-4 group-hover:bg-accent transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 md:w-8 md:h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-gray-900 font-semibold text-lg mb-2">Email</h3>
              <p class="text-gray-700 text-sm md:text-base font-medium break-all">bigbaboonsstudio@gmail.com</p>
            </div>
          </a>

          <!-- Website Card -->
          <a href="https://www.milenko.dev" target="_blank" rel="noopener noreferrer" class="group bg-gray-100 rounded-2xl p-6 md:p-8 transition-all duration-300 hover:scale-105 hover:shadow-2xl border border-gray-200">
            <div class="flex flex-col items-center text-center">
              <div class="w-14 h-14 md:w-16 md:h-16 group-hover:scale-125 bg-accent/80 rounded-full flex items-center justify-center mb-4 group-hover:bg-accent transition-all duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 md:w-8 md:h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
              </div>
              <h3 class="text-gray-900 font-semibold text-lg mb-2">Portfolio</h3>
              <p class="text-gray-700 text-base md:text-lg font-medium">milenko.dev</p>
            </div>
          </a>

        </div>

        <!-- Progress Indicator -->
        <!-- <div class="mt-12 text-center animate-pulse">
          <div class="flex items-center justify-center space-x-2">
            <div class="w-2 h-2 bg-blue-500 rounded-full animate-bounce"></div>
            <div class="w-2 h-2 bg-green-500 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
            <div class="w-2 h-2 bg-purple-500 rounded-full animate-bounce" style="animation-delay: 0.4s"></div>
          </div>
          <p class="text-gray-600 text-sm mt-4">Building something awesome...</p>
        </div> -->
      </div>

      <style>
        @keyframes fade-in {
          from {
            opacity: 0;
          }
          to {
            opacity: 1;
          }
        }

        @keyframes slide-up {
          from {
            opacity: 0;
            transform: translateY(20px);
          }
          to {
            opacity: 1;
            transform: translateY(0);
          }
        }

        .animate-fade-in {
          animation: fade-in 1s ease-out;
        }

        .animate-fade-in-delay {
          animation: fade-in 1s ease-out 0.6s both;
        }

        .animate-slide-up {
          animation: slide-up 0.8s ease-out 0.2s both;
        }

        .animate-slide-up-delay {
          animation: slide-up 0.8s ease-out 0.4s both;
        }
      </style>

    </main>



    <script>
      import Lenis from "lenis";

      const lenis = new Lenis({
        duration: 2,
        touchMultiplier: 4,
      });

      function raf(time: number) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }

      requestAnimationFrame(raf);
    </script>


  </body>
</html>