---
import Link from "./Link.astro";
import Section from "./Section.astro";
import Logo from "../assets/images/Logo.astro"
---

<Section classes=" text-white flex flex-col justify-between   fixed inset-0 -z-50 footer ">
  <a href="/" class="  w-fit mx-auto overflow-clip"
  ><Logo classes="fill-white FooterUp"/></a
>
  <div class="grow flex flex-col justify-center items-center  ">
    <div class=" relative">
      <div class="overflow-clip">
      <h1 class="FooterUp">say Hello!</h1>
    </div>
      <p class=" FooterUp font-marker text-white text-right absolute   right-0 bg-accent rotate-6 px-1 rounded-sm text-[clamp(0.75rem,_0.7rem_+_0.25vw,_1rem)">
        we wont bite, promise
      </p>
    </div>

    <Link
      classes=" email mt-12"
      url="mailto:hello@bigbaboons.studio"
      target="_blank">hello@bigbaboons.studio</Link
    >
  </div>
  <footer class="absolute bottom-3 left-0 w-full  md:flex  grid grid-cols-2 justify-between FooterUp">
    <ul class="lg:flex grid lg:gap-3  grow flex-wrap px-3 text-base lg:text-lg">
      <li><Link url="/" classes="default ">Home</Link></li>
      <li><Link url="/about" classes="default">About</Link></li>
      <li><Link url="/work" classes="default">Work</Link></li>
      <li><Link url="/contact" classes="default">Contact</Link></li>
    </ul>
    <ul class="lg:flex grid lg:gap-3  grow flex-wrap px-3 text-base lg:text-lg justify-end text-right">
      <li><div class="opacity-0">- </div></li>
      <li><Link url="" classes="default ">Instagram</Link></li>
      <li><Link url="" classes="default" >Linkedin</Link></li>

      <li class="relative inline-block px-1 py-1 font-atk font-normal">
        {" Â© " + new Date().getFullYear() + " All rights reserved"}
      </li>
    </ul>
  </footer>
</Section>

<style>
h1 {
    font-size: clamp(2rem, 0.15rem + 9.25vw, 11.25rem);
    @apply text-center my-[-0.24em];
  }

</style>
