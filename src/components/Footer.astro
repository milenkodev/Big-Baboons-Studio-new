---
import Link from "./Link.astro";
import Section from "./Section.astro";
import Logo from "../assets/images/Logo.astro";
---

<Section classes="text-white flex flex-col justify-between fixed inset-0 pointer-events-none footer opacity-0 -z-10">
  <div class="overflow-clip w-fit mx-auto">
    <a href="/" class="w-fit overflow-clip pointer-events-auto">
      <Logo classes="fill-white" />
    </a>
  </div>
  <div class="grow flex flex-col justify-center items-center">
    <div class="relative">
      <div class="overflow-clip">
        <h1 class="footer-items">Zeg hallo!</h1>
      </div>

      <p class="footer-items font-marker text-white text-right absolute right-0 bg-accent rotate-6 px-1 rounded-sm text-[clamp(0.75rem,_0.7rem_+_0.25vw,_1rem)]">
        Wij bijten niet, beloofd!
      </p>
    </div>
    
    <div class="overflow-clip">
      <Link classes="email mt-12 footer-items" url="mailto:hello@bigbaboons.studio" target="_blank">
        hello@bigbaboons.studio
      </Link>
    </div>
  </div>

  <footer class="absolute bottom-3 left-0 w-full md:flex grid grid-cols-2 justify-between footer-items px-[clamp(1rem,_0.4rem_+_3vw,_4rem)] py-[clamp(1rem,_0.8rem_+_1vw,_2rem)]">
    <ul class="lg:flex grid lg:gap-3 grow flex-wrap text-base lg:text-lg">
      <li>
        <Link url="en/" classes="default">Home</Link>
      </li>

      <li>
        <Link url="/over-ons" classes="default">Over ons</Link>
      </li>

      <li>
        <Link url="/projecten" classes="default">Projecten</Link>
      </li>

      <li>
        <Link url="/contact" classes="default">Contact</Link>
      </li>
    </ul>

    <ul class="lg:flex grid lg:gap-3 grow flex-wrap text-base lg:text-lg justify-end text-right">
      <li>
        <div class="opacity-0">-</div>
      </li>

      <li>
        <Link url="https://www.instagram.com/bigbaboonsstudio/" target="_blank" classes="default">
          Instagram
        </Link>
      </li>

      <li>
        <Link url="https://www.linkedin.com/company/big-baboons-studio/" target="_blank" classes="default">
          Linkedin
        </Link>
      </li>

      <li class="relative inline-block px-1 py-1 font-atk font-normal"> {" Â© " + new Date().getFullYear() + " All rights reserved"} </li>
    </ul>
  </footer>
</Section>