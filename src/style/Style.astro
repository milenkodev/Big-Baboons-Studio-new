---
import "@fontsource/prompt/900.css";
import "@fontsource/atkinson-hyperlegible/400.css";
import "@fontsource/atkinson-hyperlegible/700.css";
import '@fontsource/permanent-marker';
---

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  html,
  body,
  #main {
    margin: 0;
    padding: 0;
    font-family: "Atkinson Hyperlegible", sans-serif;
  }
  @font-face {
            font-family: 'Prompt';
            src: url('node_modules/@fontsource/prompt/files/prompt-latin-900-normal.woff2') format('woff2');
            font-weight: 900;
            font-style: normal;
            font-display: swap;
        }

  h1,
  h2,
  h3,
  h4,
  h5 {
    line-height: 1.1;
    line-height: calc(2px + 2ex + 2px);
  }



  h1,
  h2,
  h3 {
    @apply font-prompt uppercase;
  }

  
  h1 {
    font-size: clamp(2rem, 0.15rem + 9.25vw, 11.25rem);
    @apply text-center my-[-0.12em];
    
  } 
  .long-header-1 {
    font-size: clamp(2rem, -0.4211rem + 12.1053vw, 7.75rem);
    @apply text-center my-[-0.12em];
  }



  h2 {

    font-size: clamp(2rem, 1.4rem + 3vw, 5rem);

  }
  h3 {

    font-size: clamp(1.5rem, 1.2rem + 1.5vw, 3rem);

  }

  p{
    font-size: clamp(1rem, 0.975rem + 0.125vw, 1.125rem);
  }

  .work-titles{
    font-size: clamp(2rem, 0.85rem + 5.75vw, 7.75rem);

      @apply text-center  uppercase font-prompt relative underline ;
  }
  
  .marquee__wrapper {
  position: relative;
  overflow:clip;
  font-size: clamp(1rem, 0.9rem + 0.5vw, 1.5rem);
}

.marquee {
  animation: marquee 8s linear infinite;
  @apply whitespace-nowrap font-atk;
}

.marquee2 {
  animation: marquee2 8s linear infinite;
  position: absolute;
  top: 0;
  @apply whitespace-nowrap font-atk;
}

.marquee > li{
  margin: 8px;
}
.marquee2 > li{
  margin: 8px;
}

ul {
  display: flex;
  list-style: none;
  padding-left: 0;
}




@keyframes marquee {
  from {
    transform: translateX(0%);
  }
  to {
    transform: translateX(-100%);
  }
}

@keyframes marquee2 {
  from {
    transform: translateX(100%);
  }
  to {
    transform: translateX(0%);
  }
}


/* Define a transition duration during page visits */

html.is-changing .transition-fade {
  @apply opacity-100 transition-all duration-500;

}
/* Define the styles for the unloaded pages */
html.is-animating .transition-fade {
  opacity: 0;
}




/* Define the styles for the unloaded pages */



.transition-overlay{
  @apply fixed inset-0 bg-accent z-50 -translate-y-full  pointer-events-none ;
}

html.is-changing .transition-overlay {
  @apply duration-500  opacity-100;
  /* transition: transform 400ms ease-in-out;
  opacity: 1; */

}

html.is-animating .transition-overlay {
  @apply  translate-y-0 delay-200;
  /* transform: translate3d(0, 0, 0); */
}



html.is-rendering .transition-overlay {
  @apply  duration-1000  transition-all translate-y-full ;
}



</style>




