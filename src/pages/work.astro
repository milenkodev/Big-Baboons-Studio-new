---
import Logo from "../assets/images/Logo.astro";
import Link from "../components/Link.astro";
import Section from "../components/Section.astro";
import BaseLayout from "../layout/BaseLayout.astro";

---







<BaseLayout>
    <Section
    classes=" bg-white flex flex-col justify-center items-center "
  >
    <div class="flex justify-between w-full items-center">
      <a href="/"
        ><Logo/></a
      >
      <Link classes="cta" url="contact">Let's have a chat!</Link>
    </div>
    <div class="grow flex flex-col items-center justify-center">
      <div class="overflow-clip"><h1 class="hero-text">Work</h1></div>
 

      <img
        src="/pointing-down.svg"
        alt="hand pointing down to scroll"
        class="absolute bottom-12 right-[clamp(1rem,_0.4rem_+_3vw,_4rem)] animate-bounce"
      />
    </div>
  </Section>
  <Section classes=" indexCards bg-white relative  w-full overflow-clip  group">
    <div
      class="grow flex flex-col items-center justify-center absolute inset-0  duration-300 z-10 group-hover:bg-black/50 "
    >
      <a
        href="work/superdisco"
        class="work-titles  text-white opacity-0 group-hover:opacity-100 duration-300">Superdisco</a
      >
    </div>
      <img
      src="https://res.cloudinary.com/dw9zgtd2v/image/upload/v1716438674/Macbook_Air_M2_Mockup_1_cwesf0.webp"
        class="w-full h-full object-cover object-center absolute inset-0 group-hover:scale-110 duration-500"
        alt=""
      />
    </div>
  </Section>
  <Section classes=" indexCards bg-white relative  w-full overflow-clip  group">
    <div
      class="grow flex flex-col items-center justify-center absolute inset-0  duration-300 z-10 group-hover:bg-black/50 "
    >
      <a
        href="work/gentlemens-barber-club"
        class="work-titles  text-white opacity-0 group-hover:opacity-100 duration-300">Gentlemens barber club</a
      >
    </div>
      <img
        src="https://res.cloudinary.com/dw9zgtd2v/image/upload/v1716541736/dadasdadassad_mjazro.webp"
        class="w-full h-full object-cover object-center absolute inset-0 group-hover:scale-110 duration-500"
        alt=""
      />
    </div>
  </Section>

  <Section classes="  bg-white relative w-full overflow-clip  group">
    <div
      class="grow flex flex-col items-center justify-center absolute inset-0  duration-300 z-10 group-hover:bg-black/50 "
    >
      <a
        href="work/ishmael-zouitni"
        class="work-titles  text-white opacity-0 group-hover:opacity-100 duration-300">Ishmael Zouitni</a
      >
    </div>
      <img
      src="https://res.cloudinary.com/dw9zgtd2v/image/upload/v1716541949/wqeqweqwee_cgkdzc.webp"
        class="w-full h-full object-cover object-center absolute inset-0 group-hover:scale-110 duration-500"
        alt=""
      />
    </div>
  </Section>


</BaseLayout>