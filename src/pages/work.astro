---
import Link from "../components/Link.astro";
import Section from "../components/Section.astro";
import BaseLayout from "../layout/BaseLayout.astro";

---







<BaseLayout>
    <Section
    classes=" bg-white flex flex-col justify-center items-center "
  >
    <div class="flex justify-between w-full items-center">
      <a href="/"
        ><img
          src="/public/logo.svg"
          alt="Big Baboons Studio logo"
          class="max-w-16 hover:rotate-12 duration-300"
        /></a
      >
      <Link classes="cta" url="contact">Let's have a chat!</Link>
    </div>
    <div class="grow flex flex-col items-center justify-center">
      <h1>Work</h1>
 

      <img
        src="/pointing-down.svg"
        alt="hand pointing down to scroll"
        class="absolute bottom-12 right-[clamp(1rem,_0.4rem_+_3vw,_4rem)] animate-bounce"
      />
    </div>
  </Section>
    <Section
    classes=" text-white   flex flex-col justify-center items-center relative bg-[url('/src/assets/images/gbcfront.png')] bg-cover bg-center before:bg-black/90 before:w-full before:h-full before:absolute before:inset-0"
  >
    <div class="grow flex flex-col items-center justify-center relative">
      
        <a href="" class=" work-titles">Gentlemens barber club</a>

    </div>
  </Section>


</BaseLayout>