---
import Logo from "../../assets/images/Logo.astro";
import Hero from "../../components/Hero.astro";
import Link from "../../components/Link.astro";
import Section from "../../components/Section.astro";
import BaseLayout from "../../layout/BaseLayout.astro";
import External from "../../assets/images/External.astro";
---

<BaseLayout>
  <Hero classes="bg-white h-[20%] flex flex-col">
    <div class="flex justify-between w-full items-center">
      <a href="/"><Logo /></a>
      <Link classes="cta" url="/contact">Let's have a chat!</Link>
    </div>
    <div class="grow flex flex-col items-center justify-center h-auto gap-12">
      <h1 class="">Superdisco</h1>
      <p class="max-w-screen-lg text-center">
        "A dynamic landing page for one of Rotterdam's premier nightclubs. This
        custom-built website features an integrated CMS, empowering the client
        to effortlessly update image galleries and announce upcoming events. The
        site is optimized for peak performance, SEO-friendly, and designed to
        provide a smooth, engaging user experience."
      </p>

      <Link
        url="https://www.superdiscorotterdam.nl"
        classes="flex gap-1 justify-center items-center underline font-atk font-bold"
        target="_blank">Check it live <External /></Link
      >
    </div>
  </Hero>
  <Section classes="indexCards bg-white relative  flex">
    <div class="absolute inset-0 rounded-3xl block">
      <video
        autoplay
        loop
        muted
        playsinline
        class="h-full w-full object-cover rounded-3xl"
      >
        <source
          src="https://res.cloudinary.com/dw9zgtd2v/video/upload/v1716398823/Unnamed-file_1_xpyjwt.webm"
          type="video/webm"
        />
        <source
          src="https://res.cloudinary.com/dw9zgtd2v/video/upload/v1716398823/Unnamed-file_1_xpyjwt.mp4"
          type="video/mp4"
        />
      </video>
    </div>
  </Section>

  <Section classes=" indexCards bg-white relative  flex">
    <div class="absolute inset-0 rounded-3xl block">
      <video
        autoplay
        loop
        muted
        playsinline
        class="h-full w-full object-cover rounded-3xl"
      >
        <source
          src="https://res.cloudinary.com/dw9zgtd2v/video/upload/v1716398933/Unnamed-file_2_lpmwe9.webp"
          type="video/webm"
        />
        <source
          src="https://res.cloudinary.com/dw9zgtd2v/video/upload/v1716398933/Unnamed-file_2_lpmwe9.mp4"
          type="video/mp4"
        />
      </video>
    </div>
  </Section>

  <Section classes=" indexCards bg-white relative  flex">
    <div class="absolute inset-0 rounded-3xl block">
      <img
        src="https://res.cloudinary.com/dw9zgtd2v/image/upload/v1716438674/Macbook_Air_M2_Mockup_1_cwesf0.webp"
        alt=""
        class="h-full w-full object-cover rounded-3xl"
      />
    </div>
  </Section>
  <Section classes=" indexCards bg-white relative  flex">
    <div class="absolute inset-0 rounded-3xl block">
      <img
        src="https://res.cloudinary.com/dw9zgtd2v/image/upload/v1716438574/Macbook_Air_M2_Mockup_4-Recovered_q9zgyh.webp"
        alt=""
        class="h-full w-full object-cover rounded-3xl"
      />
    </div>
  </Section>
  <Section classes="indexCards bg-white relative  flex">
    <div class="absolute inset-0 rounded-3xl block">
      <img
        src="https://res.cloudinary.com/dw9zgtd2v/image/upload/v1716439466/Macbook_Air_M2_Mockup_3_bnomao.webp"
        alt=""
        class="h-full w-full object-cover rounded-3xl"
      />
    </div>
  </Section>
  <Section classes=" bg-white relative flex">
    <div
      class="absolute inset-0 rounded-3xl flex justify-center items-center flex-col"
    >
      <p class="text-[clamp(1.125rem,_0.95rem_+_0.875vw,_2rem)] font-atk">
        Check out next work
      </p>
      <Link classes="work-titles" url="/work/gentlemens-barber-club"
        >Gentlemens Barber Club</Link
      >
    </div>
  </Section>
</BaseLayout>
