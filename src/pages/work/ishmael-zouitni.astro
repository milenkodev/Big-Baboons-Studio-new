---
import Logo from "../../assets/images/Logo.astro";
import Hero from "../../components/Hero.astro";
import Link from "../../components/Link.astro";
import Section from "../../components/Section.astro";
import BaseLayout from "../../layout/BaseLayout.astro";
---

<BaseLayout>
  <Hero classes="bg-white h-[20%] flex flex-col">
    <div class="flex justify-between w-full items-center">
      <a href="/"><Logo /></a>
      <Link classes="cta" url="contact">Let's have a chat!</Link>
    </div>
    <div class="grow flex flex-col items-center justify-center h-auto gap-12">
      <h1 class="">Ishmael Zouitni</h1>
      <p class="max-w-screen-lg text-center">
        "We crafted an interactive website for a freelance photographer focused
        on the values of the people he collaborates with, showcasing the values
        and genuine potential of the individuals that are the main focus of his
        work"
      </p>
    </div>
  </Hero>


  <Section classes=" indexCards bg-white relative  flex">
    <div class="absolute inset-0 rounded-3xl block">
      <img
        src="https://res.cloudinary.com/dw9zgtd2v/image/upload/v1716541949/wqeqweqwee_cgkdzc.webp"
        alt=""
        class="h-full w-full object-cover rounded-3xl"
      />
    </div>
  </Section>
  <Section classes="indexCards bg-white relative  flex">
    <div class="absolute inset-0 rounded-3xl block">
      <img
        src="https://res.cloudinary.com/dw9zgtd2v/image/upload/v1716542314/sdadasdasd_qbmb5d.webp"
        alt=""
        class="h-full w-full object-cover rounded-3xl"
      />
    </div>
  </Section>
  <Section classes="indexCardsbg-white relative  flex">
    <div class="absolute inset-0 rounded-3xl block">
      <img
        src="https://res.cloudinary.com/dw9zgtd2v/image/upload/v1716543046/Macbook_Air_M2_Mockup_5_m3xzio.webp"
        alt=""
        class="h-full w-full object-cover rounded-3xl"
      />
    </div>
  </Section>
  <Section classes=" bg-white relative flex">
    <div class="absolute inset-0 rounded-3xl flex justify-center items-center flex-col">
      <p class="text-[clamp(1.125rem,_0.95rem_+_0.875vw,_2rem)] font-marker">Check out our other work</p>
      <Link classes="work-titles  underline" url="/work/superdisco"
      >Superdisco</Link>
    </div>
  </Section>

</BaseLayout>
